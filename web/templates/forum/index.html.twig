{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}

<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/main.css">
    <title>Blessed Gods</title>
    <link href="img/help.png" rel="icon">
</head>
<body>
    <header id="head">
        <div class="wrapper">
            <div class="title flex-r-c-c">
                <img src="img/help.png">
                <h1>Blessed Gods</h1>
            </div>
            {% block navbar %}
                <nav>
                    <ul class="flex-r-c-c">
                        <li><a href="{{ path('user') }}">Главная</a></li>
                        <li><a href="{{ path('app_forum') }}">Форум</a></li>
                        <li><a href="{{ path('app_register') }}">Аккаунт</a></li>
                        <li><a href="{{ path('app_report') }}">Жалоба</a></li>
                    </ul>
                </nav>
            {% endblock %}
        </div>
    </header>
    <main>
        <section id="Hello">
            <div class="start-block wrapper flex-c-c-c">
                <h1>Начни общение с товарищами по интересам у нашего костра</h1>
            </div>
        </section>
        <section id="posts">
            <div class="posts-block wrapper flex-c-c-c">
                <div class="create-post">
                    <a href="create-post.html">Создать пост</a>
                </div>
                <div class="posts-items flex-c-c-c">
                    <div class="posts__item flex-r-c-c">
                        <div class="topic">
                            <p>{{ allReport.email }}</p>
                        </div>
                        <div class="about">
                            <p>{{ allReport.description }}</p>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </main>
    <footer></footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="js/main.js"></script>
</body>

{% endblock %}
